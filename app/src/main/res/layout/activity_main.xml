<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity"
    android:background="@drawable/gradient_list"
    android:id="@+id/mainLayout">


    <Button
        android:id="@+id/profileButton"
        android:layout_width="75dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:text="@string/profile"
        app:icon="@drawable/outline_account_circle_white_24dp"
        app:iconPadding="10dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/muteButton"
        android:layout_width="65dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:background="#00FFFFFF"
        app:icon="@drawable/outline_volume_up_white_24dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
        tools:visibility="visible" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="75dp"
        android:layout_height="57dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:text="@string/home"
        app:icon="@drawable/outline_home_white_24dp"
        app:iconPadding="10dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/aboutButton"
        app:layout_constraintStart_toEndOf="@+id/profileButton"
        tools:visibility="visible" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="75dp"
        android:layout_height="57dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:text="@string/about_icon"
        app:icon="@drawable/outline_info_white_24dp"
        app:iconPadding="10dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:layout_marginBottom="400dp"
        android:backgroundTint="@color/white"
        android:text="@string/play_game_button"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonHighscore"
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:layout_marginBottom="356dp"
        android:backgroundTint="@color/white"
        android:text="@string/highscore_button"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStart"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:layout_marginBottom="276dp"
        android:backgroundTint="@color/white"
        android:text="@string/logout_button"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonHighscore"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonHighscore"
        app:layout_constraintTop_toBottomOf="@+id/buttonHighscore"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="213dp"
        android:layout_height="229dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/logo_main"
        app:layout_constraintBottom_toTopOf="@+id/buttonStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/legion_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>